{
  "name": "blade-language-support",
  "displayName": "Blade Language Support",
  "description": "Syntax highlighting for Blade template files",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "blade",
        "aliases": [
          "Blade",
          "blade"
        ],
        "extensions": [
          ".view"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "blade",
        "scopeName": "text.html.blade",
        "path": "./syntaxes/blade.tmLanguage.json"
      }
    ]
  }
}
