{
  "comments": {
    "lineComment": "//",
    "blockComment": ["{{--", "--}}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "folding": {
    "markers": {
      "start": "@(if|foreach|for|while|section|component)",
      "end": "@(endif|endforeach|endfor|endwhile|endsection|endcomponent)"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
