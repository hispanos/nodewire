{
  "files.associations": {
    "*.view": "blade"
  },
  "emmet.includeLanguages": {
    "blade": "html"
  },
  "[blade]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.autoIndent": "full",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "html.format.wrapLineLength": 120,
  "html.format.wrapAttributes": "auto",
  "html.format.indentInnerHtml": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "keyword.control.blade",
          "entity.name.function.blade"
        ],
        "settings": {
          "foreground": "#C586C0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": [
          "string.quoted.double.blade",
          "string.quoted.double.blade.raw"
        ],
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": [
          "variable.other.blade"
        ],
        "settings": {
          "foreground": "#9CDCFE"
        }
      },
      {
        "scope": [
          "comment.block.blade"
        ],
        "settings": {
          "foreground": "#6A9955",
          "fontStyle": "italic"
        }
      }
    ]
  }
}
